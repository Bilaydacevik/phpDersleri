<?php
/*
Php veri tipleri

string: metinsel bilgiler
int: tam sayılar
double: ondalıklı sayılar
boolean: true/false bilgi
object : nesne
array: dizi
null : değer içermeyen bilgi

*/

$urunAdi= "Iphone 15";
echo $urunAdi. ':' .gettype($urunAdi);

$a = 20;
echo gettype($a);   //veri türü int geldi ama double ela almak istersem


$a = (double)20;
echo gettype($a);  //double olarak karşıma çıkar.

$a = (int)false;
echo gettype($a); 
echo $a;  // eğer boolean ifadelerde hem true hem false için 0 ya 1'i kesin döndürmesini istersen, int diye belirtmek uygun olur. Aksi taktirde true karşılığı 1 yazar ama false karşılığı olarak 0 yazdırmaz.

?>
